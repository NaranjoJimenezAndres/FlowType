---
import Layout from "../layouts/Layout.astro";
import ButtonLenght from "../components/Buttons/ButtonLenght.svelte";
import CustomSelect from "../components/CustomSelect.tsx";
import ButtonClipboard from "../components/Buttons/ButtonClipboard.svelte";
import ButtonGenerate from "../components/Buttons/ButtonGenerate.svelte";

---

<Layout title="E-Generator">
  <main
    class="h-3/5 max-[1000px]:w-[1000px] min-[1001px]:w-full bg-slate-100 px-20 py-12"
  >
    <div class="w-full flex flex-nowrap h-full flex-col-2 justify-center">
      <aside
        class="bg-gray-100 lg:w-2/5 sm:w-1/2 w-1/2 h-full items-center py-3 px-12 border-collapse border-slate-950 border-8"
      >
        <div class="relative py-6">
          <label
            for="name-with-label"
            class="text-stone-950 font-semibold text-xl"
          >
            Remitente:
          </label>
          <input
            type="text"
            id="remitente-input"
            class="rounded-lg border-tr_valueerent flex-1 appearance-none border border-slate-950 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
            name="text"
            placeholder="Nombre del emisor"
          />
        </div>
        <div class="relative">
          <label
            for="name-with-label"
            class="text-stone-950 font-semibold text-xl"
          >
            Destinatario:
          </label>
          <input
            type="text"
            id="destinatario-input"
            class="rounded-lg border-transparent flex-1 appearance-none border border-slate-950 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
            name="text"
            placeholder="Nombre del destinatario"
          />
        </div>
        <div class="relative  py-6">
        <label class="text-stone-950 font-semibold text-xl" for="name"
          >Lenguaje del email:</label>
        <CustomSelect dynamicId="my-custom-select" client:visible />
      </div>
        <div class="relative">
          <label class="text-stone-950 font-semibold text-xl" for="name"
            >Respuesta:</label
          >
          <textarea
            class="flex-1 w-full h-80 px-4 py-2 text-base text-gray-700 placeholder-gray-400 bg-white border border-slate-950 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
            id="my-textarea-tasks"
            placeholder="Intruduce aquÃ­ las ideas principales de tu email y nosotros nos encargamos de generar el resto."
            name="comment"
            rows="5"
            cols="40"></textarea>
        </div>
<ButtonGenerate client:visible />
      </aside>
      <div
        class="bg-slate-950 min-[320px]:w-1/2 lg:w-3/5 w-3/5 sm:w-1/2 items-center py-16 px-16"
      >
        <div class="h-full w-full bg-black relative">
          <ButtonLenght client:visible/>
          <textarea
            class="flex-1 w-full h-5/6 px-4 py-2 text-base text-gray-700 placeholder-gray-400 bg-white border border-slate-950 appearance-none focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
            id="my-textarea-email-generated"
            disabled
            placeholder="Esperando a que generes tu email..."
            name="comment"
            rows="5"
            cols="40"></textarea>
            <ButtonClipboard client:visible />
        </div>
      </div>
    </div>
  </main>
</Layout>

